fonction pointFixe (Graphe g InOut, Noeud depart)
// initialisation
pour i allant de 0 à g.ensNoeuds.size faire
	L(g.ensNoeuds.get(i)) <- + infini
fin pour
L(depart) <- 0
// fin ini
// etapes
boolean pointFixe = false
while (!pointFixe)
	pointFixe <- true
	pour i allant de 0 à g.ensNoeuds.size faire
		pour j allant de 0 à g.ensNoeuds.getAdj.size
			si L(g.ensNoeuds.get(i)) > (L(g.ensNoeuds.get(i))+g.ensNoeuds.getAdj.get(j).getCout)
				L(g.ensNoeuds.get(i)) <- (L(g.ensNoeuds.get(i))+g.ensNoeuds.getAdj().get(j).getCout());
				pointFixe <- false
			fsi
		fpour
	fpour
fwhile
// fin etapes, point fixe atteint
fin